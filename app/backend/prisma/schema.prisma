generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CampaignStatus {
  draft
  active
  paused
  completed
  archived
}

model AidPackage {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status    String   @default("draft")
}

model VerificationRequest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status    String   @default("pending")
}

model Claim {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  status             String   @default("pending")
  verificationScore  Float?
  verificationResult Json?
  verifiedAt         DateTime?
  
  description        String?
  metadata           Json?
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String
  entity    String
  entityId  String
  action    String
  timestamp DateTime @default(now())
  metadata  Json?

  @@index([entity, entityId])
  @@index([timestamp])
}

model Campaign {
  id          String          @id @default(cuid())

  name        String

  status      CampaignStatus @default(draft)

  budget      Decimal        @db.Decimal(14, 2)

  metadata    Json?

  archivedAt  DateTime?

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([status])
  @@index([archivedAt])
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
}
